# Note install powertop2tuned before doing this
# Paste this command into configuration file
# /sys/devices/system/cpu/cpufreq/policy?/energy_performance_preference=balance_power

SUBSYSTEM=="power_supply", ATTR{status}=="Discharging", RUN+="/usr/sbin/tuned-adm profile laptop"
SUBSYSTEM=="power_supply", ATTR{status}=="Charging", RUN+="/usr/sbin/tuned-adm profile desktop"
SUBSYSTEM=="power_supply", ATTR{status}=="Full", RUN+="/usr/sbin/tuned-adm profile desktop"

ACTION=="Change", SUBSYSTEM=="power_supply", ATTR{status}=="Discharging", RUN+="/usr/sbin/tuned-adm profile laptop"
ACTION=="Change", SUBSYSTEM=="power_supply", ATTR{status}=="Charging", RUN+="/usr/sbin/tuned-adm profile desktop"
ACTION=="Change", SUBSYSTEM=="power_supply", ATTR{status}=="Full", RUN+="/usr/sbin/tuned-adm profile desktop"
